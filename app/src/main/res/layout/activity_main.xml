<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/btnGetCurrentWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Get Weather for Current Location" />

    <Spinner
        android:id="@+id/spinnerCity"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:entries="@array/city_array" />

    <Button
        android:id="@+id/btnCheckWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_marginTop="16dp"
        android:text="Check Weather for Selected City" />

    <Button
        android:id="@+id/btnGetWeatherByLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pogoda dla mojej lokalizacji" />

    <TextView
        android:id="@+id/txtWeatherResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather data will appear here"
        android:paddingTop="16dp"
        android:textSize="16sp" />

</LinearLayout>
